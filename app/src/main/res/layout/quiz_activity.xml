<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".challenges.quizfiles.QuizActivity">

    <ProgressBar
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/progress_bar_timer"
        android:layout_centerInParent = "true"
        android:layout_width="match_parent"
        android:scaleY="2"
        android:theme="@style/ProgressBarStyle"
        android:indeterminate="false"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="#878783"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/btn_question_answer_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="#878783"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/btn_question_answer_2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="#878783"/>
        <TextView
            android:id="@+id/btn_question_answer_3"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="#878783"/>
        <TextView
            android:id="@+id/btn_question_answer_4"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="#878783"/>





    </LinearLayout>

</LinearLayout>