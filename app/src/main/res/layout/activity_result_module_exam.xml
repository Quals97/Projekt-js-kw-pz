<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".science.moduleexam.ResultModuleExamActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4731B"
        android:minHeight="60dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="@string/final_exam_of_the_module" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recycler_view_result_module_exam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

            <Button
                android:id="@+id/btn_result_module_exam_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#E4731B"
                android:text="@string/result"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>